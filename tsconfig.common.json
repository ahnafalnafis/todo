{
  "compilerOptions": {
    "module": "ESNext",
    "skipLibCheck": true,

    // Path aliases:
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // Bundler mode
    "moduleResolution": "bundler",
    "allowArbitraryExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    // Basic linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true
  }
}
